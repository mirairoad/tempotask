{
  "version": "0.0.1",
  "tasks": {
    "dev": "deno run -A --node-modules-dir npm:vite",
    "build": "deno run -A --node-modules-dir npm:vite build",
    "preview": "deno run -A --node-modules-dir npm:vite preview",
    "serve": "deno run --allow-net --allow-read jsr:@std/http@1/file-server dist/"
  },
  "imports": {
    "@shared/": "./src/",
    "@server/": "./../../server/src/",
    "@primevue/auto-import-resolver": "npm:@primevue/auto-import-resolver@^4.2.5",
    "@primevue/themes": "npm:@primevue/themes@^4.2.5",
    "@vueuse/core": "npm:@vueuse/core@^12.0.0",
    "@deno/vite-plugin": "npm:@deno/vite-plugin@^1.0.2",
    "@vitejs/plugin-vue": "npm:@vitejs/plugin-vue@^5.2.1",
    "postcss": "npm:postcss@^8.4.49",
    "primevue": "npm:primevue@^4.2.5",
    "tailwindcss-primeui": "npm:tailwindcss-primeui@^0.3.4",
    "unplugin-vue-components": "npm:unplugin-vue-components@^0.27.5",
    "vite": "npm:vite@^6.0.1",
    "vite-plugin-vue-devtools": "npm:vite-plugin-vue-devtools@^7.6.8",
    "vue": "npm:vue@^3.5.13",
    "tailwindcss": "npm:tailwindcss@^3.4.16",
    "autoprefixer": "npm:autoprefixer@^10.4.20",
    "lucide-vue-next": "npm:lucide-vue-next@^0.469.0",
    "pinia": "npm:pinia@^2.3.0",
    "vue-router": "npm:vue-router@^4.5.0",
    "primeicons": "npm:primeicons@^7.0.0",
    "@primevue/forms": "npm:@primevue/forms@^4.2.5",
    "@std/path": "jsr:@std/path@^1.0.0",
    "@std/fs": "jsr:@std/fs@^1.0.0",
    "zod": "npm:zod@3.23.8"
  },
  "lint": {
    "exclude": [
      "**/*.ts",
      "**/*.vue"
    ]
  }
}